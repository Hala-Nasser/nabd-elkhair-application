<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="rtl"
    android:paddingHorizontal="20dp"
    tools:context=".charity.fragments.GeneralSettingsFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="عام"
                android:textSize="16sp"
                android:fontFamily="@font/tajawal_bold"
                android:textColor="@color/black_transparent_94"
                android:layout_marginTop="30dp"/>

            <RelativeLayout
                android:id="@+id/charity_edit_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/profile_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_profile"
                    app:tint="@color/settings_grey_transparent_55" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_toEndOf="@+id/profile_icon"
                    android:fontFamily="@font/tajawal_medium"
                    android:text="تعديل الملف الشخصي"
                    android:textColor="@color/settings_grey"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_baseline_keyboard_arrow_left_24"
                    app:tint="@color/settings_grey_arrow" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="@color/grey_transparent_15" />

            <RelativeLayout
                android:id="@+id/charity_change_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/password_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_baseline_lock_24"
                    app:tint="@color/settings_grey_transparent_55" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_toEndOf="@+id/password_icon"
                    android:fontFamily="@font/tajawal_medium"
                    android:text="تغيير كلمة المرور"
                    android:textColor="@color/settings_grey"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_baseline_keyboard_arrow_left_24"
                    app:tint="@color/settings_grey_arrow" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="@color/grey_transparent_15" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="الخصوصية"
                android:textSize="16sp"
                android:fontFamily="@font/tajawal_bold"
                android:textColor="@color/black_transparent_94"
                android:layout_marginTop="30dp"/>

            <RelativeLayout
                android:id="@+id/charity_privacy_policy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/privacy_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/privacy_icon"
                    app:tint="@color/settings_grey_transparent_55" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_toEndOf="@+id/privacy_icon"
                    android:fontFamily="@font/tajawal_medium"
                    android:text="سياسة الخصوصية"
                    android:textColor="@color/settings_grey"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_baseline_keyboard_arrow_left_24"
                    app:tint="@color/settings_grey_arrow" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="@color/grey_transparent_15" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="تسجيل"
                android:paddingStart="10dp"
                android:textSize="16sp"
                android:fontFamily="@font/tajawal_bold"
                android:textColor="@color/black_transparent_94"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/general_settings_sign_out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="تسجيل خروج"
                android:paddingStart="10dp"
                android:textSize="16sp"
                android:fontFamily="@font/tajawal_bold"
                android:textColor="@color/app_color"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>