<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="rtl"
    android:paddingHorizontal="20dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:layoutDirection="rtl"
        tools:context=".charity.fragments.GeneralSettingsFragment"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="عام"
                android:textSize="16sp"
                android:fontFamily="@font/tajawal_bold"
                android:textColor="@color/black_transparent_94"
                />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:startIconDrawable="@drawable/ic_profile"
                app:startIconTint="@color/settings_grey_transparent_55"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/charity_edit_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/tajawal_medium"
                    android:inputType="none"
                    android:text="تعديل الملف الشخصي"
                    android:clickable="true"
                    android:focusable="false"
                    android:cursorVisible="false"
                    android:textColor="@color/settings_grey"
                    android:textSize="15sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:startIconDrawable="@drawable/ic_baseline_lock_24"
                app:startIconTint="@color/settings_grey_transparent_55">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/charity_change_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/tajawal_medium"
                    android:inputType="none"
                    android:text="تغيير كلمة المرور"
                    android:clickable="true"
                    android:focusable="false"
                    android:cursorVisible="false"
                    android:textColor="@color/settings_grey"
                    android:textSize="15sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="الخصوصية"
                android:textSize="16sp"
                android:fontFamily="@font/tajawal_bold"
                android:textColor="@color/black_transparent_94"
                android:layout_marginTop="20dp"/>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:startIconDrawable="@drawable/privacy_icon"
                app:startIconTint="@color/settings_grey_transparent_55"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/charity_privacy_policy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/tajawal_medium"
                    android:inputType="none"
                    android:text="سياسة الخصوصية"
                    android:clickable="true"
                    android:focusable="false"
                    android:cursorVisible="false"
                    android:textColor="@color/settings_grey"
                    android:textSize="15sp"/>

            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="تسجيل"
                android:textSize="16sp"
                android:fontFamily="@font/tajawal_bold"
                android:textColor="@color/black_transparent_94"
                android:layout_marginTop="20dp"/>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/general_settings_sign_out"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/tajawal_medium"
                    android:inputType="none"
                    android:text="تسجيل خروج"
                    android:clickable="true"
                    android:focusable="false"
                    android:cursorVisible="false"
                    android:textColor="@color/app_color"
                    android:textSize="15sp" />

            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>