<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:fillViewport="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".charity.fragments.ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="30dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="90dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_settings"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="الملف الشخصي"
                    android:gravity="center"
                    android:fontFamily="@font/tajawal_bold"
                    android:textColor="@color/black_transparent_94"
                    android:textSize="16sp"/>
            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="73dp"
                android:layout_height="73dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/charity_image"
                android:padding="3dp"
                android:layout_gravity="center"
                android:background="@drawable/dashed_border"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="جمعية الاحسان التطوعية"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/tajawal_bold"
                android:textColor="@color/black_transparent_94"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="amber.patel@mail.com"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/tajawal_medium"
                android:textColor="@color/black_transparent_37"
                android:textSize="14sp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="50dp"
                android:layout_marginVertical="20dp"
                android:paddingVertical="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="30"
                        android:textSize="25dp"
                        android:textColor="@color/black_transparent_94"
                        android:fontFamily="@font/tajawal_medium"
                        android:textAlignment="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="تبرع بحملة"
                        android:textSize="14sp"
                        android:textColor="@color/grey_transparent_94"
                        android:fontFamily="@font/tajawal_medium"
                        android:textAlignment="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="24"
                        android:textSize="25dp"
                        android:textColor="@color/black_transparent_94"
                        android:fontFamily="@font/tajawal_medium"
                        android:textAlignment="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="تبرع بدون حملة"
                        android:textSize="14sp"
                        android:textColor="@color/grey_transparent_94"
                        android:fontFamily="@font/tajawal_medium"
                        android:textAlignment="center"/>

                </LinearLayout>

            </LinearLayout>


            <com.google.android.material.tabs.TabLayout
                android:id="@+id/charity_profile_tab_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                app:tabIndicatorGravity="stretch"
                app:tabSelectedTextColor="@color/white"
                app:tabTextColor="@color/app_color"
                app:tabIndicatorAnimationMode="elastic"
                app:tabBackground="@drawable/profile_tab_style"
                app:tabIndicator="@drawable/profile_tab_style"
                app:tabTextAppearance="@style/tab_text"
                >

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="عن الجمعية"
                    />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="شكاوي"
                    />


            </com.google.android.material.tabs.TabLayout>


            <androidx.viewpager.widget.ViewPager
                android:id="@+id/charity_profile_view_pager"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_marginTop="20dp"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:ignore="SpeakableTextPresentCheck" />


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>