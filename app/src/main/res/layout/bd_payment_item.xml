<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    android:background="@drawable/bottom_dialog">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="10dp">

            <ImageView
                android:id="@+id/close"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_close" />

            <TextView
                android:id="@+id/title_payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/tajawal_bold"
                android:gravity="center"
                android:text="paypal"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/edit_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tajawal_medium"
                android:text="تعديل"
                android:textColor="@color/app_color"
                android:textSize="17sp" />
        </LinearLayout>



        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:orientation="horizontal"
        android:background="@drawable/white_button"
        android:backgroundTint="@color/black_transparent_4"
        >
        <ImageButton
            android:id="@+id/copyPin"
            style="?android:buttonBarButtonStyle"
            android:src="@drawable/ic_content_copy"
            app:tint="@color/black_transparent_43"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/payPal_txt"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:inputType="text"
            android:text="Paypal.Me/noorAbd"
            android:textColor="@color/app_color"
            android:textSize="18sp"
            android:fontFamily="@font/tajawal_bold"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:textDirection="rtl"
            />



    </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>