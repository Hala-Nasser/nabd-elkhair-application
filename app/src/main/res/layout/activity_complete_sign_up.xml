<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".donor.CompleteSignUpActivity"
    android:layoutDirection="rtl"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:layout_marginTop="90dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="أكمل المتطلبات"
            android:textAlignment="center"
            android:textAppearance="@style/title"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/choose_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/app_color_transparent">

            <ImageView
                android:id="@+id/image"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_camera"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="إضافة صورة الملف الشخصي"
            android:textColor="@color/app_color_transparent_86"
            android:textSize="15sp"
            android:fontFamily="@font/tajawal_medium"
            android:textAlignment="center"
            android:layout_marginTop="30dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sign_up"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="60dp"
            android:background="@drawable/colored_button"
            android:gravity="center"
            android:text="تسجيل"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:fontFamily="@font/tajawal_bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>