<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="rtl"
    tools:context=".charity.fragments.VisaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:orientation="horizontal"
        android:background="@drawable/white_button"
        android:backgroundTint="@color/black_transparent_4"
        >
        <ImageButton
            android:id="@+id/visaCopyPin"
            style="?android:buttonBarButtonStyle"
            android:src="@drawable/ic_content_copy"
            app:tint="@color/black_transparent_43"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/visa_txt"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:inputType="text"
            android:hint="Visa.Me/Example"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:textDirection="rtl"
            />



    </LinearLayout>
</FrameLayout>