<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        android:layoutDirection="ltr"
        android:layout_height="60dp"
        tools:targetApi="jelly_bean_mr1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="50dp">
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/donation_clothes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="0dp"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="0.0px"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    app:strokeWidth="1.5dp"
                    app:strokeColor="@color/app_color"
                    android:layout_marginLeft="10dp"
                    app:cardPreventCornerOverlap="false"
                    >

                    <ImageView
                        android:id="@+id/clothes_img"
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        app:tint="@color/black"
                        android:src="@drawable/clothes" />

                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="50dp">
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/donation_food"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="0dp"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="0.0px"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    app:strokeWidth="1.5dp"
                    app:strokeColor="@color/app_color"
                    android:layout_marginLeft="10dp"
                    app:cardPreventCornerOverlap="false"
                    >

                    <ImageView
                        android:id="@+id/food_img"
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        app:tint="@color/black"
                        android:src="@drawable/food" />

                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="50dp">
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/donation_money"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="0dp"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="0.0px"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    app:strokeWidth="1.5dp"
                    app:strokeColor="@color/app_color"
                    android:layout_marginLeft="10dp"
                    app:cardPreventCornerOverlap="false"
                    >

                    <ImageView
                        android:id="@+id/money_img"
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/money" />

                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="50dp">
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/donation_all"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="0dp"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="0.0px"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    app:strokeWidth="1.5dp"
                    app:strokeColor="@color/app_color"
                    android:layout_marginLeft="10dp"
                    app:cardPreventCornerOverlap="false"
                    >

                    <ImageView
                        android:id="@+id/all_img"                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        app:tint="@color/black"
                        android:src="@drawable/all" />

                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>




        </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="#AFAFAF"
                />
        </LinearLayout>


    </FrameLayout>

</LinearLayout>