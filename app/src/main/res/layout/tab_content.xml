<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp"
    android:gravity="center">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layoutDirection="ltr"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="60dp"
                android:layout_weight="1"
                android:gravity="end"
                android:layout_height="match_parent">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/jawalPal"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="@color/payment_color"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="0dp"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="0.0px"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/payment_color"
                    app:cardPreventCornerOverlap="false"
                    android:layout_margin="5dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/new_master_card" />

                </com.google.android.material.card.MaterialCardView>

                <ImageView
                    android:id="@+id/jawalPal_checked"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_baseline_check_circle_24"
                    app:tint="@color/app_color"
                    android:visibility="invisible"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="-25dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="60dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_height="60dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/visa"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="@color/payment_color"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="0dp"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="0.0px"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    app:cardPreventCornerOverlap="false"
                    android:layout_margin="5dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/visa" />

                </com.google.android.material.card.MaterialCardView>

                <ImageView
                    android:id="@+id/visa_checked"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_baseline_check_circle_24"
                    app:tint="@color/app_color"
                    android:visibility="invisible"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="-25dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="60dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="start"
                android:layout_height="60dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/payPal"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="@color/payment_color"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="0dp"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="0.0px"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    app:cardPreventCornerOverlap="false"
                    android:layout_margin="5dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/paypal_logo" />

                </com.google.android.material.card.MaterialCardView>

                <ImageView
                    android:id="@+id/paypal_checked"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_baseline_check_circle_24"
                    app:tint="@color/app_color"
                    android:visibility="invisible"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="-25dp"
                    />

            </LinearLayout>

        </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>